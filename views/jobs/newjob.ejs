<div class="container">
<div id="formdiv">
  <div class="row">
    <h1>Job Request Form</h1>
    <div class="col-sm-12 form-group-md">
      <form action="/job/new" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" class="form-control">
        </div>
        <div class="form-group">
          <label for="category">Category</label><br>
          <select name="category" id="category">
            <% types.forEach((category) => { %>
              <option type="text" value="<%= category %>" class="form-control"><%= category %></option>
            <%  }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description" class="form-control"></textarea>
        </div>
        <div class="form-group">
          <label for="deadline">Deadline</label>
          <input type="date" name="deadline" class="form-control">
        </div>

        <div class="form-group">
          <input type="file" name="photo">
        </div>
        <!-- <form action="/job/new" method="post" enctype="multipart/form-data"> -->
          <!-- <label for="jobTitle">Job Description</label>
          <input id="jobTitle" type="text" name="name"> -->
        <!-- </form> -->
        <div class="form-group">
          <!-- <input type="submit" value="Request Job"> -->
          <button type="submit" value="Save">Request Job</button>
        </div>
      </form>
    </div>
  </div>
</div>
</div>
