<% if (typeof user !== 'undefined') { %>
<% if (requestJob.length > 0) { %>
  <div class="campaign-row row">
    <% requestJob.forEach(function(job) { %>
      <div class="col-sm-3 home-campaign-box">
        <h3><%= job.title %></h3>
      <img src="<%= job.pic_path %>" alt="<%= job.pic_name %>" />
      <div class="campaign-info-wrapper">
        <!-- <a class="title" href="<%= requestJob._id %>"> -->
        <!-- </a> -->
        <li>
        <span class="light-text description"><%= job.description %></span>
      </li>
      <br>
      By: <span class="light-text"><%= job._creator.username %></span>
      <br>
      </div>
    </div>
    <% })%>
</div>
<% } %>
<% } %>

<% if (typeof user == 'undefined') { %>
<div class="container-fluid">
  <div class="home-heading text-center row">
    <div class="home-heading-wrapper">
      <h1>iHandy Solutions</h1>
      <p>iHandy Solutions is a family own business that provides house services of all kinds.</p>
      <% if (typeof user == 'undefined') { %>
      <a class="btn btn-default" href="/signup">Get Started</a>
      <% } %>
    </div>
  </div>
</div>
<% } %>
